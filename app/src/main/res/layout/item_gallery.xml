<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/icon_gallery_max_width"
        android:layout_height="@dimen/icon_gallery_max_height"
        android:id="@+id/ivIcon"
        android:maxWidth="@dimen/icon_gallery_max_width"
        android:maxHeight="@dimen/icon_gallery_max_height"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvName"
        android:background="@color/black"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_below="@+id/ivIcon"
        android:layout_alignLeft="@+id/ivIcon"
        android:layout_alignRight="@+id/ivIcon" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>

